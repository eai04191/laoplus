{
    "compilerOptions": {
        "lib": ["DOM"],
        "target": "ESNext",
        "jsx": "react",

        "module": "ESNext",
        "baseUrl": "src",
        "paths": {
            "~/*": ["./*"]
        },
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,

        "strict": true,
        "skipLibCheck": true,
        "noUncheckedIndexedAccess": true,

        "plugins": [{ "name": "eslint-plugin-import-access" }]
    }
}
